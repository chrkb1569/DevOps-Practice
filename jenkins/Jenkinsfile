pipeline {
    agent {
        docker {
            image 'gradle:8.4.0-jdk17'
            reuseNode true
        }
    }
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "https://github.com/chrkb1569/DevOps-Practice"
            }
        }

        stage('Build Project') {
            steps {
                sh './gradlew clean build'
            }
        }
    }
}