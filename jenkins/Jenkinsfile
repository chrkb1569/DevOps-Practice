pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "https://github.com/chrkb1569/DevOps-Practice"
            }
        }

        stage('Build Project') {
            steps {
                sh './gradlew clean build'
            }
        }

        stage('Docker Login') {
            steps {
                sh 'echo $DOCKER_PASSWORD | docker login -u $DOCKER_USERNAME --password-stdin'
            }
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t chrkb1569/jenkins:test .'
            }
        }

        stage('Push Docker Image') {
            steps {
                sh 'docker push chrkb1569/jenkins:test'
            }
        }

        stage('Deploy') {
            steps {
                sh 'ssh -o StrictHostKeyChecking=no ubuntu@$APPLICATION_SERVER'
                sh 'scp /var/jenkins_home/workspace/Jenkins Practice/build/libs/*.jar ubuntu@APPLICATION_SERVER:/home/ubuntu/chrkb1569'
                sh 'ssh -t ubuntu@$APPLICATION_SERVER ./DockerDeploy.sh'
            }
        }
    }
}