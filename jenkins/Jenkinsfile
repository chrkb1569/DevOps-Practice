pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: "https://github.com/chrkb1569/DevOps-Practice"
            }
        }

        stage('Build Project') {
            agent {
                docker {
                    image 'gradle:8.4.0-jdk17'
                    reuseNode true
                }
            }
            steps {
                dir("./CI-CD-Practice") {
                    sh './gradlew clean build'
                }
            }
        }
    }
}